<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppCustomRowRelativeLayout"
    android:clickable="true">

    <com.quovantis.musicplayer.updated.utility.CircleImageView
        android:id="@+id/iv_playlist_thumbnail"
        style="@style/AppCircularImage"
        android:src="@drawable/music"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_playlist"
        style="@style/AppTextViewEllipse"
        android:layout_toEndOf="@+id/iv_playlist_thumbnail"
        android:layout_toRightOf="@+id/iv_playlist_thumbnail"
        android:text="@string/dummy_song" />

    <View
        style="@style/AppDivider"
        android:layout_below="@+id/iv_playlist_thumbnail"
        android:background="@color/grey" />
</RelativeLayout>