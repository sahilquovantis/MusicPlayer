<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppRelativeLayoutMatchParent"
    tools:context="com.quovantis.musicplayer.updated.ui.views.playlists.PlaylistsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar" />

    <include
        android:id="@+id/rl_music_layout"
        style="@style/AppIncludeMusicLayout"
        layout="@layout/music_layout" />

    <TextView
        android:id="@+id/tv_no_playlist"
        style="@style/AppEmptyTextView"
        android:text="@string/empty_playlist"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_playlists_list"
        style="@style/AppRecyclerView"
        android:layout_above="@+id/rl_music_layout"
        android:layout_below="@+id/toolbar" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/AppProgressBar"
        android:visibility="visible" />
</RelativeLayout>