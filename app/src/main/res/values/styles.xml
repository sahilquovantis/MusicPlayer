<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:itemTextAppearance">@style/PopUpStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="PopUpStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppRelativeLayoutMatchParent">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTextViewMatchParent">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppDivider">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppProgressBar">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppRecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppIncludeMusicLayout">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppViewPager">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTabLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppEmptyTextView">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/sp_26</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTextViewEllipse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppSongsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppCircularImage">
        <item name="android:layout_height">@dimen/circluar_image_view_width_height</item>
        <item name="android:layout_width">@dimen/circluar_image_view_width_height</item>
    </style>

    <style name="AppCustomRowRelativeLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppOptionImageView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_width">@dimen/dp_30</item>
    </style>

    <style name="AppOptionsLinearLayout">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppLinearLayoutWrapHorizontal">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!-- Create Playlist UI -->
    <style name="AppCreatePlaylistRelativeLayout">
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppCreatePlaylistThumbnailRelativeLayout">
        <item name="android:layout_width">@dimen/create_playlist_thumbnail_width_height</item>
        <item name="android:layout_height">@dimen/create_playlist_thumbnail_width_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppCreatePlaylistImageView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">@dimen/add_playlist_image_width_height</item>
        <item name="android:layout_width">@dimen/add_playlist_image_width_height</item>
    </style>

    <style name="AppCreatePlaylistTextView">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
